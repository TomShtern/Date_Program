<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="datingapp.ui.screen.SocialController">

  <top>
    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-surface">
      <Button onAction="#handleBack" styleClass="button-transparent" text="â† Back"/>
      <Label styleClass="screen-title" text="Social"/>
      <Region HBox.hgrow="ALWAYS"/>
      <Button onAction="#handleRefresh" styleClass="button-transparent">
        <graphic>
          <FontIcon iconLiteral="mdi2r-refresh" iconSize="20" iconColor="white"/>
        </graphic>
      </Button>
    </HBox>
  </top>

  <center>
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">

      <!-- Notifications Tab -->
      <Tab text="Notifications">
        <graphic>
          <FontIcon iconLiteral="mdi2b-bell" iconSize="16" iconColor="#3b82f6"/>
        </graphic>
        <VBox spacing="8">
          <padding>
            <Insets top="16" right="16" bottom="16" left="16"/>
          </padding>
          <Label styleClass="text-secondary" text="Tap a notification to mark it as read"/>
          <ListView fx:id="notificationsListView" VBox.vgrow="ALWAYS" prefHeight="580"
                    styleClass="transparent-scroll"/>
        </VBox>
      </Tab>

      <!-- Friend Requests Tab -->
      <Tab text="Friend Requests">
        <graphic>
          <FontIcon iconLiteral="mdi2a-account-multiple" iconSize="16" iconColor="#a855f7"/>
        </graphic>
        <VBox spacing="8">
          <padding>
            <Insets top="16" right="16" bottom="16" left="16"/>
          </padding>
          <Label styleClass="text-secondary" text="Pending requests from your matches"/>
          <ListView fx:id="requestsListView" VBox.vgrow="ALWAYS" prefHeight="580"
                    styleClass="transparent-scroll"/>
        </VBox>
      </Tab>

    </TabPane>
  </center>

</BorderPane>
