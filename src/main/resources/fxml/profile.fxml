<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="datingapp.ui.controller.ProfileController">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-bar">
            <Button onAction="#handleBack" styleClass="button-transparent" text="â† Back" />
            <Label styleClass="subheading" text="Edit Profile" />
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Label fx:id="completionLabel" styleClass="text-secondary" text="--" />
            </HBox>
        </HBox>
    </top>

    <!-- Center Content: Profile Form -->
    <center>
        <VBox spacing="20.0" styleClass="content-container">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <!-- User Name (read-only display) -->
            <VBox spacing="5.0">
                <Label styleClass="subheading" text="Profile" />
                <Label fx:id="nameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="User Name" />
            </VBox>

            <!-- Bio -->
            <VBox spacing="8.0">
                <Label style="-fx-font-weight: bold;" text="Bio" />
                <TextArea fx:id="bioArea" prefHeight="120.0" promptText="Tell others about yourself..."
                    wrapText="true" />
            </VBox>

            <!-- Location -->
            <VBox spacing="8.0">
                <Label style="-fx-font-weight: bold;" text="Location (Latitude, Longitude)" />
                <TextField fx:id="locationField" promptText="e.g. 40.7128, -74.0060" />
            </VBox>

            <!-- Interests (read-only for now, would need a better picker) -->
            <VBox spacing="8.0">
                <Label style="-fx-font-weight: bold;" text="Interests" />
                <TextField fx:id="interestsField" promptText="Your interests (read-only)" editable="false"/>
                <Label styleClass="text-secondary" text="Edit interests via CLI for now" />
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
                <Button onAction="#handleCancel" styleClass="button-secondary" text="Cancel" />
                <Button onAction="#handleSave" text="Save Changes" />
            </HBox>
        </VBox>
    </center>

</BorderPane>