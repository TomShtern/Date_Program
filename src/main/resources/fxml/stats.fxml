<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="900.0"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="datingapp.ui.controller.StatsController">
  <!-- Header -->
  <top>
    <HBox alignment="CENTER_LEFT" spacing="16" styleClass="header-bar">
      <Button onAction="#handleBack" styleClass="button-transparent">
        <graphic>
          <FontIcon iconLiteral="mdi2c-chevron-left" iconSize="28" iconColor="white"/>
        </graphic>
      </Button>
      <FontIcon iconLiteral="mdi2t-trophy" iconSize="24" iconColor="#f59e0b"/>
      <Label styleClass="subheading" text="Stats &amp; Achievements"/>
    </HBox>
  </top>

  <!-- Main Content -->
  <center>
    <ScrollPane fitToWidth="true" styleClass="transparent-scroll">
      <VBox spacing="32">
        <padding>
          <Insets bottom="40" left="50" right="50" top="30"/>
        </padding>
        <!-- Your Progress Section -->
        <VBox spacing="20">
          <HBox alignment="CENTER_LEFT" spacing="12">
            <FontIcon iconLiteral="mdi2c-chart-arc" iconSize="24" iconColor="#667eea"/>
            <Label text="Your Progress" styleClass="stats-section-header"/>
          </HBox>
          <!-- Stats Cards Row -->
          <HBox spacing="20">
            <!-- Total Likes Card -->
            <VBox styleClass="stats-card, stats-card-likes" HBox.hgrow="ALWAYS">
              <StackPane styleClass="stats-icon-container, stats-icon-likes">
                <FontIcon iconLiteral="mdi2h-heart" iconSize="32" iconColor="#f43f5e"/>
              </StackPane>
              <Label fx:id="totalLikesLabel" styleClass="stats-value" text="0"/>
              <Label styleClass="stats-label" text="Total Likes"/>
            </VBox>
            <!-- Matches Card -->
            <VBox styleClass="stats-card, stats-card-matches" HBox.hgrow="ALWAYS">
              <StackPane styleClass="stats-icon-container, stats-icon-matches">
                <FontIcon iconLiteral="mdi2a-account-group" iconSize="32" iconColor="#10b981"/>
              </StackPane>
              <Label fx:id="totalMatchesLabel" styleClass="stats-value" text="0"/>
              <Label styleClass="stats-label" text="Matches"/>
            </VBox>
            <!-- Match Rate Card -->
            <VBox styleClass="stats-card, stats-card-rate" HBox.hgrow="ALWAYS">
              <StackPane styleClass="stats-icon-container, stats-icon-rate">
                <FontIcon iconLiteral="mdi2c-chart-line" iconSize="32" iconColor="#f59e0b"/>
              </StackPane>
              <Label fx:id="responseRateLabel" styleClass="stats-value" text="--"/>
              <Label styleClass="stats-label" text="Match Rate"/>
            </VBox>
          </HBox>
        </VBox>
        <!-- Decorative Separator -->
        <Region styleClass="profile-separator" prefHeight="1"/>
        <!-- Achievements Section -->
        <VBox spacing="20">
          <HBox alignment="CENTER_LEFT" spacing="12">
            <FontIcon iconLiteral="mdi2t-trophy-award" iconSize="24" iconColor="#fbbf24"/>
            <Label text="Achievements" styleClass="stats-section-header"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label styleClass="text-secondary, stat-label-secondary" text="Coming Soon"/>
          </HBox>
          <!-- Achievement Cards Grid -->
          <VBox spacing="12" styleClass="achievements-container">
            <!-- First Match Achievement -->
            <HBox styleClass="achievement-card" spacing="16" alignment="CENTER_LEFT">
              <StackPane styleClass="achievement-badge-icon">
                <FontIcon iconLiteral="mdi2h-heart-flash" iconSize="24" iconColor="#f59e0b"/>
              </StackPane>
              <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="First Match" styleClass="stat-label-primary"/>
                <Label text="Make your first match" styleClass="text-secondary, stat-label-secondary"/>
              </VBox>
              <FontIcon iconLiteral="mdi2l-lock" iconSize="20" iconColor="#64748b"/>
            </HBox>
            <!-- Super Liker Achievement -->
            <HBox styleClass="achievement-card" spacing="16" alignment="CENTER_LEFT">
              <StackPane styleClass="achievement-icon-locked">
                <FontIcon iconLiteral="mdi2s-star" iconSize="24" iconColor="#64748b"/>
              </StackPane>
              <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="Super Liker" styleClass="stat-label-primary"/>
                <Label text="Send 10 super likes" styleClass="text-secondary, stat-label-secondary"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                  <StackPane styleClass="achievement-progress" HBox.hgrow="ALWAYS">
                    <StackPane styleClass="achievement-progress-fill" StackPane.alignment="CENTER_LEFT"/>
                  </StackPane>
                  <Label text="0/10" styleClass="text-secondary, stat-label-small"/>
                </HBox>
              </VBox>
              <FontIcon iconLiteral="mdi2l-lock" iconSize="20" iconColor="#64748b"/>
            </HBox>
            <!-- Conversation Starter Achievement -->
            <HBox styleClass="achievement-card" spacing="16" alignment="CENTER_LEFT">
              <StackPane styleClass="achievement-icon-locked">
                <FontIcon iconLiteral="mdi2m-message-text" iconSize="24" iconColor="#64748b"/>
              </StackPane>
              <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="Conversation Starter" styleClass="stat-label-primary"/>
                <Label text="Start 5 conversations" styleClass="text-secondary, stat-label-secondary"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                  <StackPane styleClass="achievement-progress" HBox.hgrow="ALWAYS">
                    <StackPane styleClass="achievement-progress-fill" StackPane.alignment="CENTER_LEFT"/>
                  </StackPane>
                  <Label text="0/5" styleClass="text-secondary, stat-label-small"/>
                </HBox>
              </VBox>
              <FontIcon iconLiteral="mdi2l-lock" iconSize="20" iconColor="#64748b"/>
            </HBox>
            <!-- Profile Pro Achievement -->
            <HBox styleClass="achievement-card" spacing="16" alignment="CENTER_LEFT">
              <StackPane styleClass="achievement-icon-locked">
                <FontIcon iconLiteral="mdi2a-account-check" iconSize="24" iconColor="#64748b"/>
              </StackPane>
              <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="Profile Pro" styleClass="stat-label-primary"/>
                <Label text="Complete your profile 100%" styleClass="text-secondary, stat-label-secondary"/>
              </VBox>
              <FontIcon iconLiteral="mdi2l-lock" iconSize="20" iconColor="#64748b"/>
            </HBox>
          </VBox>
        </VBox>
      </VBox>
    </ScrollPane>
  </center>
</BorderPane>
